{
  "AzureSignalR": {
    "ConnectionString": "Endpoint=https://drashyam-signalr.service.signalr.net;AccessKey=your-access-key;Version=1.0;",
    "HubPrefix": "drashyam",
    "UseAzureSignalR": true
  },
  "AzureCommunication": {
    "ConnectionString": "endpoint=https://drashyam-communication.communication.azure.com/;accesskey=your-access-key",
    "ResourceEndpoint": "https://drashyam-communication.communication.azure.com/",
    "StreamingEndpoint": "https://streaming.drashyam.com",
    "HlsEndpoint": "https://streaming.drashyam.com/hls",
    "RtmpEndpoint": "rtmp://streaming.drashyam.com/live",
    "WebRtcEndpoint": "https://streaming.drashyam.com/webrtc"
  },
  "AzureStorage": {
    "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=drashyamstorage;AccountKey=your-storage-key;EndpointSuffix=core.windows.net",
    "VideoContainerName": "videos",
    "ImageContainerName": "images"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:drashyam-sql-server.database.windows.net,1433;Initial Catalog=DrashyamDB;Persist Security Info=False;User ID=drashyam-admin;Password=YourSecurePassword123!;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
    "Redis": "drashyam-redis.redis.cache.windows.net:6380,password=your-redis-password,ssl=True,abortConnect=False"
  }
}